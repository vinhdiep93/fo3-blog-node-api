{
  "name": "Post",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Paginate": {
      "limit": "10"
    }
  },
  "properties": {
    "PostId": {
      "type": "number",
      "required": true
    },
    "Title": {
      "type": "string",
      "required": true
    },
    "Summary": {
      "type": "string"
    },
    "Content": {
      "type": "string",
      "required": true
    },
    "ImageUrl": {
      "type": "string"
    },
    "Pseudonym": {
      "type": "string"
    },
    "CategoryId": {
      "type": "number",
      "required": true
    },
    "CreatedDate": {
      "type": "date"
    },
    "CreatedBy": {
      "type": "number"
    },
    "IsActive": {
      "type": "boolean",
      "required": true,
      "default": true
    }
  },
  "validations": [],
  "relations": {
    "comments":{
      "type": "hasMany",
      "model": "comment",
      "foreignKey":"postId",
      "primaryKey": "id"
    }
    ,"category":{
      "type":"belongsTo",
      "model":"Category",
      "foreignKey": ""
    }
  },
  "acls": [],
  "methods": {}
}
